{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "typeRoots": [
         "node_modules/@types"
      ],
      "types": [
         "node"
      ],
      "paths": {
         "src/*": ["src/*"]
      },
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }
}